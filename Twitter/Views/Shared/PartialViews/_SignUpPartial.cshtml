@using Microsoft.AspNetCore.Http;
@model User

<div class="modal" id="SignUp" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><strong>Create Account</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="form-group" style="display:none; ">
                <label>UserId</label>
                <input type="text" id="id" name="id" class="form-control" />
            </div>

            <form method="post" enctype="multipart/form-data">
                <div class="row">

                    <div class="col-md-12">
                        <h2 class="text-center lead"> upload a picture</h2>
                        <input class="form-control" type="file" name="files">
                    </div>
                    <div class="col-md-12" style="margin-top:25px;">
                        <input asp-for="Username" class="form-control" type="text" placeholder="Username">
                    </div>
                    <div class="col-md-12" style="margin-top:25px;">
                        <input asp-for="Name" class="form-control" type="text" placeholder="Name">
                    </div>
                    <div class="col-md-12" style="margin-top:25px;">
                        <input asp-for="Email" class="form-control" type="text" placeholder="Email">

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger" role="alert" style="width: max-content;">
                                @TempData["Message"]
                            </div>
                        }
                    </div>
                    <div class="col-md-12" style="margin-top:25px;">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                    </div>
                    <div class="col-md-12" style="margin-top:25px;">
                        <input asp-for="BirthDate" class="form-control" type="date" placeholder="Birthdate">
                    </div>
                    <div class="col-md-12" style="margin-top:25px;">
                        <button style="background-color:#1DA1F2" class="btn btn-primary">Sign Up</button>
                        <button type="button" class="btn btn-secondary" style="background-color:#1DA1F2" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
